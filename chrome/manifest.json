{
  "manifest_version": 2,

  "name": "Power+",
  "description": "A better UI for Canvas LMS",
  "version": "3.0.4",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://*.instructure.com/*", "https://powerplus.app/"],
      "js": ["communicator.js"]
    }
  ],
  "icons": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
}
